{
  "server": {
    "host": "localhost",
    "port": 25565,
    "version": "1.21"
  },
  "bot": {
    "username": "OpenClaw_Bot",
    "auth": "offline"
  },
  "files": {
    "events": "events.json",
    "commands": "commands.json",
    "worldMemory": "world-memory.json"
  },
  "soul": {
    "enabled": true,
    "path": "/data/.openclaw/workspace/SOUL.md",
    "fallbackPersonality": "neutral",
    "comment": "SOUL.md defines bot personality, values, and boundaries. Set SOUL_PATH env var to override path."
  },
  "intervals": {
    "commandCheck": 750,
    "perception": 3000,
    "autoSurvival": 5000,
    "autonomousCheck": 10000,
    "stateUpdate": 5000,
    "commandPoll": 2000
  },
  "survival": {
    "autoEat": true,
    "autoEatThreshold": 6,
    "retreatHealthThreshold": 6,
    "drowningOxygenThreshold": 50
  },
  "pathfinding": {
    "allowParkour": false,
    "canDig": true,
    "allowFreeMotion": false
  },
  "autonomous": {
    "enabled": true,
    "defaultGoal": "thriving_survivor",
    "customGoal": null,
    "checkIntervalMs": 10000,
    "announceActions": true,
    "helpNearbyPlayers": true,
    "helpRadius": 20,
    "goals": {
      "thriving_survivor": {
        "description": "Survive, build shelter, gather resources, explore, thrive",
        "phases": ["survival", "home", "resources", "crafting", "exploration", "thriving"]
      },
      "peaceful_farmer": {
        "description": "Focus on farming, animals, and peaceful living",
        "phases": ["survival", "home", "farming", "animals", "thriving"]
      },
      "explorer": {
        "description": "Map the world, find all biomes, document discoveries",
        "phases": ["survival", "resources", "exploration", "documentation"]
      },
      "builder": {
        "description": "Focus on building magnificent structures",
        "phases": ["survival", "resources", "crafting", "building", "decoration"]
      },
      "wealthy_trader": {
        "description": "Trade with villagers, accumulate emeralds",
        "phases": ["survival", "resources", "trading", "wealth"]
      },
      "take_over_server": {
        "description": "Resource dominance, PvP preparation, strategic expansion",
        "phases": ["survival", "resources", "crafting", "fortification", "dominance"]
      }
    }
  }
}
